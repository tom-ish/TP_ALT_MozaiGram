<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.upmc.tomo.tp_alt_mozaigram.HomeActivity">

    <Button
        android:id="@+id/chooseOrTakeBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:background="@drawable/button_selector"
        android:text="@string/choose_picture"/>

    <SeekBar
        android:id="@+id/mozaikGrainSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseOrTakeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_margin"
        android:max="100"
        android:progress="50"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageView
        android:id="@+id/pickedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mozaikGrainSeekbar"
        android:layout_margin="@dimen/button_margin"/>

    <ImageView
        android:id="@+id/mozaikImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mozaikGrainSeekbar"
        android:layout_margin="@dimen/button_margin"
        android:visibility="gone" />

    <Button
        android:id="@+id/generateMozaikButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:background="@drawable/button_selector"
        android:text="@string/generate_mozaik"
        android:visibility="gone"/>

    <Button
        android:id="@+id/saveGeneratedMozaikButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:background="@drawable/button_selector"
        android:text="@string/save_mozaik"
        android:visibility="gone"/>


</RelativeLayout>
